.body {
  width: 100%;
  height: 600px;
}
/* 按钮 */
.body image {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: -1;
}
.formula_picker {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
}
.formula_picker_title {
  height: 100rpx;
  background-color: #e4e4ee;
  color: black;
  font-size: 30rpx;
  text-align: center;
  line-height: 100rpx;
  opacity: 0.7;
  border-radius: 30rpx;
  border-bottom: 1px solid #ccc;
}
.bc {
  height: 80rpx;
  background-color: #e4e4e4;
  color: blue;
  opacity: 0.7;
  font-size: 30rpx;
  text-align: center;
  line-height: 80rpx;
  border-radius: 30rpx;
}
.bc:first-child {
  border-bottom: 1px solid #ccc;
}
.cancel {
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  color: red;
  text-align: center;
  line-height: 90rpx;
  border-radius: 30rpx;
  margin: 20rpx 0;
}