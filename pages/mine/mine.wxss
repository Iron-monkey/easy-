page {
  width: 100%;
  height: 100%;
  background-image: url(https://s3.ax1x.com/2020/12/12/rEOgxA.jpg);
  background-size: 100% 100%;
}
.Info {
  padding: 0 40rpx;
  width: 100%;
  display: flex;
  height: 150rpx;
  background-color: white;
  align-items: center;
}
.avatar {
  width: 120rpx;
  border-radius: 60rpx;
}
.avatar image{ 
  width: 100%;
  border-radius: 48rpx;
}
.textInfo {
  margin-left: 40rpx;
}
.grade {
  background-image: url(https://s3.ax1x.com/2020/12/12/rEvZCD.png);
  background-repeat: no-repeat;
  height: 64rpx;
  padding-left: 70rpx;
  line-height: 64rpx;
}
.list {
  position: relative;
  display: flex;
  align-items: center;
  margin: 30rpx 0;
  padding-left: 100rpx;
  width: 100%;
  height: 100rpx;
  line-height: 70rpx;
  font-size: 30rpx;

  background-position-x: 20rpx;
  background-position-y: 18rpx;
  background-repeat: no-repeat;
  background-color: #fff;
}
.right {
  position: absolute;
  top: 22rpx;
  left: 670rpx;
  width: 32rpx;
}
.right image {
  width: 100%;
}
.help {
  background-image: url(https://s3.ax1x.com/2020/12/12/rEx5Os.png);
}
.config {
  background-image: url(https://s3.ax1x.com/2020/12/12/rVS7GT.png);
