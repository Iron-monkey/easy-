page {
  position: relative;
  height: 100%;
  width: 100%;
  background-image: url(https://s3.ax1x.com/2020/12/12/rEODUO.jpg);
  background-size: 100% 100%;
}

.OCR_history {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  background-color: WhiteSmoke;
  opacity: 0.3;
  text-align: right;
  color: #1296db;
}

.OCR_history image {
  margin: 17rpx;
  float: right;
  height: 32rpx;
}

.camera {
  margin: 300rpx auto;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 500rpx;
  height: 500rpx;
  border-radius: 250rpx;
  background-color: #1296db;
}

.camera image {
  width: 70%;
}